<h1>New Game</h1>
  <div class="table">
    <ul class="horizontal">
      <% @letter.each do |letter| %>
      <li><%= letter %></li>
      <%end%>
    </ul>
  </div>

<h2>What is your longest word ?</h2>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter, @letter %>
  <input type="text" name="world" placeholder="World">
  <input type="submit">
</form>
